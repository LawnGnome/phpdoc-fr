  <refentry id="function.odbc-field-scale">
   <refnamediv>
    <refname>odbc_field_scale</refname>
    <refpurpose>Lit l'échelle d'un champ</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Description</title>
     <methodsynopsis>
      <type>string</type><methodname>odbc_field_scale</methodname>
      <methodparam><type>resource</type><parameter>result_id</parameter></methodparam>
      <methodparam><type>int</type><parameter>field_number</parameter></methodparam>
     </methodsynopsis>
    <para>
     <function>odbc_field_precision</function> retourne l'échelle
     du champ référencé par son numéro
     de champ <parameter>field_number</parameter> dans le résultat
     ODBC <parameter>result_id</parameter>.
    </para>
   </refsect1>
  </refentry>

