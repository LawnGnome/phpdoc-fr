<refentry xml:id="function.get-loaded-extensions" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>get_loaded_extensions</refname>
  <refpurpose>Retourne la liste de tous les modules compilés et chargés</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>array</type><methodname>get_loaded_extensions</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Retourne un tableau contenant les noms de tous les modules compilés
   et chargés sur l'interpreteur &php; courant.
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retourne un tableau indexé des noms de tous les modules.
  </para>
 </refsect1>


 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <function>get_loaded_extensions</function></title>
    <programlisting role="php">
<![CDATA[
<?php
print_r(get_loaded_extensions());
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Array
(
   [0] => xml
   [1] => wddx
   [2] => standard
   [3] => session
   [4] => posix
   [5] => pgsql
   [6] => pcre
   [7] => gd
   [8] => ftp
   [9] => db
   [10] => calendar
   [11] => bcmath
)
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>get_extension_funcs</function></member>
    <member><function>extension_loaded</function></member>
    <member><function>dl</function></member>
    <member><function>phpinfo</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

