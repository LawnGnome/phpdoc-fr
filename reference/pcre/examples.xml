<appendix xml:id="pcre.examples">
 &reftitle.examples;
 <para>
  <example>
   <title>Exemples de masques valides</title>
   <itemizedlist>
    <listitem><simpara><literal>/&lt;\/\w+&gt;/</literal></simpara></listitem>
    <listitem><simpara><literal>|(\d{3})-\d+|Sm</literal></simpara></listitem>
    <listitem><simpara><literal>/^(?i)php[34]/</literal></simpara></listitem>
    <listitem><simpara><literal>{^\s+(\s+)?$}</literal></simpara></listitem>
   </itemizedlist>
  </example>
 </para>
 <para>
  <example>
   <title>Exemples de masques invalides</title>
   <itemizedlist>
    <listitem>
     <simpara>
      <literal>/href='(.*)'</literal> - il manque le délimiteur de fin
     </simpara>
    </listitem>
    <listitem>
     <simpara>
      <literal>/\w+\s*\w+/J</literal> - le modificateur 'J' est inconnu
     </simpara>
    </listitem>
    <listitem>
     <simpara>
      <literal>1-\d3-\d3-\d4|</literal> - il manque le délimiteur de début
     </simpara>
    </listitem>
   </itemizedlist>
  </example>
 </para>
</appendix>

