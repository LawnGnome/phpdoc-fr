<refentry xml:id='function.samconnection-rollback' xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>SAMConnection->rollback()</refname>
  <refpurpose>Annulation d'un travail</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <classsynopsis>
   <ooclass><classname>SAMConnection</classname></ooclass>
   <methodsynopsis>
    <type>bool</type><methodname>rollback</methodname><void/>
   </methodsynopsis>
  </classsynopsis>
  <para>
   Annulation d'un travail.
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Cette méthode retourne &false; si une erreur survient.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Annulation d'un travail</title>
    <programlisting role="php">
<![CDATA[
<?php
if (!$conn->rollback()) {
  // L'annulation a échoué !
  echo "L'annulation a échoué : ($conn->errno) $conn->error";
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><xref linkend="function.samconnection-commit" /></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

