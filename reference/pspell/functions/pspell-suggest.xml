  <refentry id="function.pspell-suggest">
   <refnamediv>
    <refname>pspell_suggest</refname>
    <refpurpose>Sugg&egrave;re une orthographe</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Description</title>
     <methodsynopsis>
      <type>array</type><methodname>pspell_suggest</methodname>
      <methodparam><type>int</type><parameter>dictionary_link</parameter></methodparam>
      <methodparam><type>string</type><parameter>word</parameter></methodparam>
     </methodsynopsis>
    <simpara>
     <function>pspell_suggest</function> retourne un tableau de suggestions
     pour le mot <parameter>word</parameter>.
    </simpara>
    <para>
     <example>
      <title>Exemple avec <function>pspell_suggest</function></title>
      <programlisting role="php">
<![CDATA[
<?php
$pspell_link = pspell_new ("english");
if (!pspell_check ($pspell_link, "testt")){
    $suggestions = pspell_suggest ($pspell_link, "testt");
    for ($i=0; $i < count ($suggestions); $i++) {
        echo "Orthographes sugg&eacute;r&eacute;es : " . $suggestions[$i] . "<br>";
    }
}
?>
]]>
      </programlisting>
     </example>
    </para>
   </refsect1>
  </refentry>

