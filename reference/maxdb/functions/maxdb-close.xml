  <refentry id="function.maxdb-close">
   <refnamediv>
    <refname>maxdb_close</refname>
    <refname>maxdb->close</refname>
    <refpurpose>
     Ferme une connexion à une base de données</refpurpose>
   </refnamediv>
   <refsect1>
    &reftitle.description;
    &title.procedural;
    <methodsynopsis>
     <type>bool</type><methodname>maxdb_close</methodname>
     <methodparam><type>resource</type><parameter>link</parameter></methodparam>
    </methodsynopsis>
    &title.oop;
    <classsynopsis>
     <ooclass><classname>maxdb</classname></ooclass>
     <methodsynopsis>
      <type>bool</type>
      <methodname>close</methodname>
      <void />
     </methodsynopsis>
    </classsynopsis>
    <para>
     <function>maxdb_close</function> ferme une connexion à une base
     de données spécifiée par le paramètre <parameter>link</parameter>.
    </para>
   </refsect1>
   <refsect1>
    &reftitle.returnvalues;
    <para>
     &return.success;
    </para>
   </refsect1>
   <refsect1>
    &reftitle.seealso;
    <para>
     <function>maxdb_connect</function>,
     <function>maxdb_init</function> et
     <function>maxdb_real_connect</function>.
    </para>
   </refsect1>
  </refentry>

