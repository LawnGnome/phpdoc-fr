 <para>
  <variablelist>
   <varlistentry xml:id="ini.msql.allow-persistent">
    <term>
     <parameter>msql.allow_persistent</parameter>
     <type>bool</type>
    </term>
    <listitem>
     <para>
      Activation ou non des connexions mSQL persistantes.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.msql.max-persistent">
    <term>
     <parameter>msql.max_persistent</parameter>
     &integer;
    </term>
    <listitem>
     <para>
      Le nombre maximum de connexions mSQL persistantes par processus.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.msql.max-links">
    <term>
     <parameter>msql.max_links</parameter>
     &integer;
    </term>
    <listitem>
     <para>
      Le nombre maximum de connexions mSQL par processus, y
      compris les connexions persistantes.
     </para>
    </listitem>
   </varlistentry>

