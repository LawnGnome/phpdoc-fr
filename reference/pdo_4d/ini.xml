&ini.descriptions.title;

 <para>
  <variablelist>
   <varlistentry xml:id="ini.pdo-4d.default-host">
    <term>
     <parameter>pdo_4d.default_host</parameter>
     <type>string</type>
    </term>
    <listitem>
     <para>
      L'hôte de connexion par défaut.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.pdo-4d.default-port">
    <term>
     <parameter>pdo_4d.default_port</parameter>
     <type>string</type>
    </term>
    <listitem>
     <para>
      Le numéro de port de connexion par défaut, lors de la connexion.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.pdo-4d.default-user">
    <term>
     <parameter>pdo_4d.default_user</parameter>
     <type>string</type>
    </term>
    <listitem>
     <para>
      Le nom d'utilisateur par défaut, lors de la connexion.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.pdo-4d.default-password">
    <term>
     <parameter>pdo_4d.default_password</parameter>
     <type>string</type>
    </term>
    <listitem>
     <para>
      Le mot de passe par défaut pour l'utilisateur, lors de la connexion.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.pdo-4d.connect-timeout">
    <term>
     <parameter>pdo_4d.connect_timeout</parameter>
     <type>string</type>
    </term>
    <listitem>
     <para>
      Le délai de tentative de connexion au serveur 4D,
      avant d'abandonner.
     </para>
    </listitem>
   </varlistentry>

   <varlistentry xml:id="ini.pdo-4d.charset">
    <term>
     <parameter>pdo_4d.charset</parameter>
     <type>string</type>
    </term>
    <listitem>
     <para>
      Le jeu de caractère dans lequel pdo_4d retourne ses chaînes.
     </para>
    </listitem>
   </varlistentry>
   
   <varlistentry xml:id="ini.pdo-4d.prefered-image-type">
    <term>
     <parameter>pdo_4d.prefered_image_type</parameter>
     <type>string</type>
    </term>
    <listitem>
     <para>
      Le format d'image retourné pour les colonnes de type
      image. Peut être n'importe quel format que 4D supporte.
      Par exemple, JPEG ou PNG.
     </para>
    </listitem>
   </varlistentry>

  </variablelist>
 </para>
