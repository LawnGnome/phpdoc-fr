<refentry xml:id="function.harudoc-readfromstream" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>HaruDoc::readFromStream</refname>
  <refpurpose>Lit les données depuis le flux temporaire</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>HaruDoc::readFromStream</methodname>
   <methodparam><type>int</type><parameter>bytes</parameter></methodparam>
  </methodsynopsis>
  <para>
   Lit les données depuis le flux temporaire.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>bytes</parameter></term>
     <listitem>
      <para>
       Le paramètre <parameter>bytes</parameter> spécifie le nombre
       d'octets à lire, même si le flux peut contenir moins d'octets
       que désirés.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retourne les données depuis le flux temporaire.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  &haru.error;
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>HaruDoc::saveToStream</methodname></member>
    <member><methodname>HaruDoc::resetStream</methodname></member>
    <member><methodname>HaruDoc::getStreamSize</methodname></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

