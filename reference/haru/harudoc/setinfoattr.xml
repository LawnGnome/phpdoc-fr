<refentry xml:id="harudoc.setinfoattr" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>HaruDoc::setInfoAttr</refname>
  <refpurpose>Définit l'attribut d'information du document</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>HaruDoc::setInfoAttr</methodname>
   <methodparam><type>int</type><parameter>type</parameter></methodparam>
   <methodparam><type>string</type><parameter>info</parameter></methodparam>
  </methodsynopsis>
  <para>
   Définit un attribut d'information. Utilise l'encodage courant
   du document.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>type</parameter></term>
     <listitem>
      <para>
       Le type de l'attribut. Peut être un parmi :
       <simplelist>
        <member>
         <constant>HaruDoc::INFO_AUTHOR</constant> 
        </member>
        <member>
         <constant>HaruDoc::INFO_CREATOR</constant> 
        </member>
        <member>
         <constant>HaruDoc::INFO_TITLE</constant> 
        </member>
        <member>
         <constant>HaruDoc::INFO_SUBJECT</constant> 
        </member>
        <member>
         <constant>HaruDoc::INFO_KEYWORDS</constant> 
        </member>
       </simplelist>
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>info</parameter></term>
     <listitem>
      <para>
       La valeur de l'attribut.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retourne &true; en cas de succès.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  &haru.error;
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>HaruDoc::setInfoDateAttr</methodname></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

