 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Calcul d'une date à partir d'un décalage de semaine et de jours</title>
   <programlisting role="php">
<![CDATA[
<?php
$date = new DateTime();

$date->setISODate(2008, 2);
echo $date->format('Y-m-d') . "\n";

$date->setISODate(2008, 2, 1);
echo $date->format('Y-m-d') . "\n";

$date->setISODate(2008, 2, 7);
echo $date->format('Y-m-d') . "\n";

// Les valeurs trop grandes sont ajoutées aux valeurs parentes.
$date->setISODate(2008, 2, 8);
echo $date->format('Y-m-d') . "\n";
?>
]]>
   </programlisting>
   &example.outputs;
   <screen>
<![CDATA[
2008-01-07
2008-01-07
2008-01-13
2008-01-14
]]>
   </screen>
  </example>
  <example>
   <title>Calcul du mois dans lequel est une semaine</title>
   <programlisting role="php">
<![CDATA[
<?php
$date = new DateTime();
$date->setISODate(2008, 14);
echo $date->format('n');  // 3
?>
]]>
   </programlisting>
  </example>
 </refsect1>
 
