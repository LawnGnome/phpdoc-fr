<!-- splitted from ./fr/functions/ftp.xml, last change in rev 1.7 -->
<!-- last change to 'ftp-site' in en/ tree in rev 1.3 -->
 <refentry id="function.ftp-site">
  <refnamediv>
   <refname>ftp_site</refname>
   <refpurpose>Envoie la commande SITE au serveur</refpurpose>
  </refnamediv>
  <refsect1>
   <title>Description</title>
    <methodsynopsis>
      <type>bool</type><methodname>ftp_site</methodname>
      <methodparam><type>resource</type><parameter>ftp_stream</parameter></methodparam>
      <methodparam><type>string</type><parameter>cmd</parameter></methodparam>
     </methodsynopsis>
   <para>
    <function>ftp_site</function> envoie la commande <parameter>cmd</parameter> au
    serveur FTP. Les commandes SITE ne sont pas normalisées, et peuvent
    varier d'un serveur à l'autre. Elles permettent de gérer
    notamment les permissions de fichier, et les groupes.
   </para>
    <para>
     &return.success;
    </para>
  </refsect1>
 </refentry>

