 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <informalexample>
    <programlisting role="php">
<![CDATA[
<?php
$im = imagecreatefrompng("test.png");

header('Content-type: image/png');

imagepng($im);
imagedestroy($im);
?>
]]>
    </programlisting>
   </informalexample>
  </para>
 </refsect1>
