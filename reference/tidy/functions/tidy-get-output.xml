<refentry id="function.tidy-get-output">
   <refnamediv>
    <refname>tidy_get_output</refname>
    <refpurpose>
     Retourne une chaîne représentant les balises telles qu'analysées par Tidy
    </refpurpose>
   </refnamediv>
   <refsect1>
    &reftitle.description;
    <methodsynopsis>
     <type>string</type><methodname>tidy_get_output</methodname>
     <methodparam><type>tidy</type><parameter>object</parameter></methodparam>
    </methodsynopsis>
    <para>
     <function>tidy_get_output</function> retourne une chaîne avec le HTML
     réparé.
    </para>
    <para>
     <example>
      <title>Exemple avec <function>tidy_get_output</function></title>
      <programlisting role="php">
<![CDATA[
<?php
 
$html = '<p>paragraphe</i>';
$tidy = tidy_parse_string($html);
  
$tidy->CleanRepair();

echo tidy_get_output($tidy);
?>
]]>
      </programlisting>
      &example.outputs;
      <screen>
<![CDATA[
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 3.2//EN">
<html>
<head>
<title></title>
</head>
<body>
<p>paragraphe</p>
</body>
</html>
]]>
      </screen>
     </example>
    </para>
   </refsect1>
  </refentry>

