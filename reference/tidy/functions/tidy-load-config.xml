<refentry xml:id="function.tidy-load-config" xmlns="http://docbook.org/ns/docbook">
   <refnamediv>
    <refname>tidy_load_config</refname>
    <refpurpose>
     Charge un fichier de configuration ASCII Tidy avec l'encodage spécifié
    </refpurpose>
   </refnamediv>
   <refsect1>
    &reftitle.description;
    <methodsynopsis>
     <type>void</type><methodname>tidy_load_config</methodname>
     <methodparam><type>string</type><parameter>filename</parameter></methodparam>
     <methodparam><type>string</type><parameter>encoding</parameter></methodparam>
    </methodsynopsis>
    <para>
     <function>tidy_load_config</function> charge le fichier de configuration Tidy avec le
     jeu de caractères <parameter>encoding</parameter>.
    </para>
     &note.tidy.1only;
   </refsect1>
  </refentry>

