<!-- last change to 'imap-rfc822-write-address' in en/ tree in rev 1.2 -->
 <refentry id="function.imap-rfc822-write-address">
  <refnamediv>
   <refname>imap_rfc822_write_address</refname>
   <refpurpose>Retourne une adresse email formatée correctement</refpurpose>
  </refnamediv>
  <refsect1>
   <title>Description</title>
     <methodsynopsis>
      <type>string</type><methodname>imap_rfc822_write_address</methodname>
      <methodparam><type>string</type><parameter>mailbox</parameter></methodparam>
      <methodparam><type>string</type><parameter>host</parameter></methodparam>
      <methodparam><type>string</type><parameter>personal</parameter></methodparam>
     </methodsynopsis>
   <para>
    <parameter>mailbox</parameter> retourne une adresse email formatée
    correctement selon la <ulink url="&url.rfc;rfc2822.html">RFC2822</ulink>, 
    à partir du nom de la boîte aux lettres de l'hôte 
    <parameter>host</parameter>, et des informations personnelles 
    <parameter>personal</parameter>.
   </para>
   <para>
    <example>
     <title>Exemple avec <function>imap_rfc822_write_address</function></title>
     <programlisting role="php">
<![CDATA[
<?php
  print imap_rfc822_write_address("hartmut","cvs.php.net","Hartmut Holzgraefe")."\n";      
?>
]]>
     </programlisting>
    </example>
   </para>
  </refsect1>
 </refentry>

