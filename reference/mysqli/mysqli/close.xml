<refentry xml:id="mysqli.close" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>mysqli::close</refname>
  <refname>mysqli_close</refname>
  <refpurpose>Ferme une connexion</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  &title.oop;
   <methodsynopsis>
    <type>bool</type><methodname>mysqli::close</methodname>
    <void />
   </methodsynopsis>
  &title.procedural;
  <methodsynopsis>
   <type>bool</type><methodname>mysqli_close</methodname>
   <methodparam><type>mysqli</type><parameter>link</parameter></methodparam>
  </methodsynopsis>
  <para>
   Ferme la connexion spécifiée par le paramètre <parameter>link</parameter>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &mysqli.link.description;
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
