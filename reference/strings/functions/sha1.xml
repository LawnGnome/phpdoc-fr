 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemple avec <function>sha1</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$str = 'pomme';

if (sha1($str) === '752c14ea195c460bac3c3b7896975ee9fd15eeb7') {
    echo "Voulez-vous une golden ou une spartan ?";
    exit;
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

