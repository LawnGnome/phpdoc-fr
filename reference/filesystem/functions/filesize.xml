 <refentry id="function.filesize">
  <refnamediv>
   <refname>filesize</refname>
   <refpurpose>Renvoie la taille du fichier</refpurpose>
  </refnamediv>
  <refsect1>
   <title>Description</title>
    <methodsynopsis>
      <type>int</type><methodname>filesize</methodname>
      <methodparam><type>string</type><parameter>filename</parameter></methodparam>
     </methodsynopsis>
   <para>
    <function>filesize</function> renvoie la taille du fichier
    <parameter>filename</parameter>, ou &false; en cas d'erreur.
   </para>
    &note.clearstatcache;
    
    &tip.fopen-wrapper.stat;
  </refsect1>
 </refentry>

