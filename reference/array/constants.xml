<section id="array.constants">
 &reftitle.constants;
 &extension.constants.core;
 <variablelist>
  <varlistentry>
   <term>
    <constant>CASE_LOWER</constant>
    (<link linkend="language.types.integer">integer</link>)
   </term>
   <listitem>
    <simpara>
     <constant>CASE_LOWER</constant> est utilis&eacute; avec
     <function>array_change_key_case</function> et sert &agrave; convertir
     tous les index d'un tableau en minuscules. C'est aussi le comportement
     par d&eacute;faut de <function>array_change_key_case</function>.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>CASE_UPPER</constant>
    (<link linkend="language.types.integer">integer</link>)
   </term>
   <listitem>
    <simpara>
     <constant>CASE_UPPER</constant> est utilis&eacute; avec
     <function>array_change_key_case</function> et sert &agrave; convertir
     tous les index d'un tableau en majuscule.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>SORT_ASC</constant>
    (<link linkend="language.types.integer">integer</link>)
   </term>
     <listitem>
      <simpara><constant>SORT_ASC</constant> trie en ordre ascendant</simpara>
     </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>SORT_DESC</constant>
    (<link linkend="language.types.integer">integer</link>)
   </term>
     <listitem>
      <simpara><constant>SORT_DESC</constant> trie en ordre descendant</simpara>
     </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>SORT_REGULAR</constant>
    (<link linkend="language.types.integer">integer</link>)
   </term>
     <listitem>
      <simpara><constant>SORT_REGULAR</constant> compare normalement les valeurs d'un tri</simpara>
     </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>SORT_NUMERIC</constant>
    (<link linkend="language.types.integer">integer</link>)
   </term>
     <listitem>
      <simpara><constant>SORT_NUMERIC</constant> compare num&eacute;riquement les valeurs d'un tri</simpara>
     </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>SORT_STRING</constant>
    (<link linkend="language.types.integer">integer</link>)
   </term>
     <listitem>
      <simpara>
       <constant>SORT_STRING</constant> compare alphab&eacute;tiquement les valeurs d'un tri.
      </simpara>
     </listitem>
  </varlistentry>
 </variablelist>
</section>

